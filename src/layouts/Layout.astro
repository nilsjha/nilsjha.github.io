---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title = "nilsjha.github.io" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicon-16x16.png"
    />
    <link rel="manifest" href="assets/site.webmanifest" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="min-h-screen min-w-full flex flex-col bg-black text-white bg-gradient-to-br from-stone-950 font-mono font-bold"
  >
    <main class="container py-2 md:py-8 mx-auto grow flex flex-col">
      <slot />
    </main>
  </body>
</html>
