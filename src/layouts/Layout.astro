---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="nn">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="I'm a software developer from Norway" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body
    class="min-h-screen min-w-full flex flex-col bg-black text-white bg-gradient-to-br from-stone-950 font-mono font-bold"
  >
    <slot />
  </body>
</html>
