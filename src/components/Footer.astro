---
interface Props {
  home?: boolean;
}

const { home = false } = Astro.props;
const today = new Date();
---

<footer
  class="w-100
  content-center
  max-md:text-center
  shrink-0
  my-4
  max-md:my-2
  px-20
  max-sm:px-4
  max-sm:text-center
  uppercase
  tracking-widest
  flex flex-row"
>
  <span class="flex flex-row gap-2 max-md:hidden">
    <span class="">■</span>
    {today.getFullYear()}
  </span>
  <span class={home ? "" : "hidden"}
    >|<a class="_hotlink" href="/">main menu</a></span
  >
  <span class={home ? "hidden" : "max-md:hidden flex gap-2"}>
    <span>|</span>
     Nils Jarle Haugen<span class="text-slate-400 hover:animate-degauss"
      ><a
        href="https://www.fjordnorway.com/en/destinations/alesund--geiranger"
        class="hover:animate-degauss"
        target="_blank">ålesund</a
      ></span
    > norway
  </span>
  <div class="max-md:hidden">
    <slot />
  </div>
</footer>
